{
  "name": "daskeyboard-applet--slack",
  "displayName": "Slack",
  "version": "1.0.0",
  "description": "Displays Slack notifications.",
  "longDescription": "Get a visual notification on your Das Keyboard Q series when there is a new Slack action.",
  "officialProductName": "Slack",
  "appUrl": "www.github.com",
  "isSingleton": false,
  "videoUrl": "",
  "icon": "assets/icon.png",
  "image": "assets/missing.png",
  "publisher": "Das Keyboard",
  "authorName": "Das Keyboard",
  "authorUrl": "https://twitter.com/daskeyboard",
  "issuesUrl": "https://github.com/metadot/daskeyboard-applet--slack/issues",
  "homePageUrl": "https://github.com/DasKeyboard/daskeyboard-applet--slack",
  "developerRepoUrl": "https://github.com/metadot/daskeyboard-applet--slack",
  "license": "GPL",
  "licenseUrl": "http://www.gnu.org/licenses/old-licenses/gpl-2.0.txt",
  "changelogUrl": "CHANGELOG.md",
  "readMeUrl": "README.md",
  "readMeEndUserUrl": "README_ENDUSER.md",
  "engines": {
    "das-keyboard-q": "3.1.2"
  },
  "main": "index.js",
  "scripts": {
    "test": "mocha"
  },
  "author": "Das Keyboard",
  "dependencies": {
    "daskeyboard-applet": "2.11.3"
  },
  "qConfig": {
    "geometry": {
      "width": 1,
      "height": 1
    },
    "authorization": {
      "type": "oauth2"
    },
    "questions": [
      {
        "key": "channels",
        "label": "Add channel",
        "help": "Notify each time a new message from the channels listed bellow arrives",
        "required": true,
        "placeholder": "general",
        "order": 1,
        "controlType": "textbox",
        "isArray": true
      },
      {
        "key": "color",
        "label": "Select a color",
        "required": true,
        "order": 2,
        "controlType": "color",
        "value": "#ff0000"
      },
      {
        "key": "effect",
        "label": "Select a notification effect",
        "required": true,
        "order": 3,
        "controlType": "effect",
        "value": "BLINK"
      }
    ]
  },
  "devDependencies": {
    "mocha": "^5.2.0"
  }
}
